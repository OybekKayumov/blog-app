<div class='container mt-4'>
<h1 class = "p-4 text-start m-2" >List of all users</h1>

  <% @users.each do |user| %>

    <div class="card mb-3 mt4" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag("images.png", :alt => "rss feed", class: 'img-fluid rounded-start')   %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"> <%= link_to user.name, user_url(user), class: 'display-5 text-primary' %></h5>            
            <p class="text-end">Number of posts: 
              <%= user.posts_counter ?  user.posts_counter : 0   %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>